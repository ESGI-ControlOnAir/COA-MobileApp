<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:startColor="#ececec"
                        android:endColor="#c9c9c9"
                        android:type="linear"
                        android:angle="270"
                        android:centerColor="#b6b6b6" />
                    <stroke
                        android:width="1dp"
                        android:color="#c4c4c4" />
                    <corners
                        android:radius="5dp" />
                </shape>
            </item>
            <item>
                <shape>
                    <!--<gradient
                        android:startColor="#333333"
                        android:endColor="#333333"
                        android:type="linear"
                        android:gradientRadius="200"
                        android:centerColor="#000000fff"
                        android:centerX="0.5"
                        android:centerY="0" />-->
                    <stroke
                        android:width="1dp"
                        android:color="#e2e2e2" />
                    <corners
                        android:radius="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Normal state. -->
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:startColor="#535353"
                        android:endColor="#aaa"
                        android:type="linear"
                        android:angle="270"
                        android:centerColor="#000" />
                    <stroke
                        android:width="1dp"
                        android:color="#000" />
                    <corners
                        android:radius="5dp" />
                </shape>
            </item>
            <item>
                <shape>
                    <!--<gradient
                        android:startColor="#333333"
                        android:endColor="#333333"
                        android:type="linear"
                        android:gradientRadius="200"
                        android:centerColor="#000000fff"
                        android:centerX="0.5"
                        android:centerY="0" />-->
                    <stroke
                        android:width="1dp"
                        android:color="#3d3d3d" />
                    <corners
                        android:radius="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>