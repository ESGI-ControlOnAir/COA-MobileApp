<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:startColor="#dabcb7"
                        android:endColor="#ac9896"
                        android:type="linear"
                        android:angle="270"
                        android:centerColor="#5c4543" />
                    <stroke
                        android:width="1dp"
                        android:color="#48403e" />
                    <corners
                        android:radius="5dp" />
                </shape>
            </item>
            <item>
                <shape>
                    <!--<gradient
                        android:startColor="#333333"
                        android:endColor="#333333"
                        android:type="linear"
                        android:gradientRadius="200"
                        android:centerColor="#000000fff"
                        android:centerX="0.5"
                        android:centerY="0" />-->
                    <stroke
                        android:width="1dp"
                        android:color="#aaa" />
                    <corners
                        android:radius="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Normal state. -->
